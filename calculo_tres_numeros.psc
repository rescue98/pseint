Proceso calculo_tres_numeros
	Escribir "Ingrese numero 1";
	Leer num1;
	Escribir "Ingrese numero 2";
	Leer num2;
	Escribir "Ingrese numero 3";
	Leer num3;
	suma<-num1+num2+num3;
	promedio<-suma/3;
	num1_r<-num1^2;
	num2_r<-num2^3;
	num3_r<-num3^4;
	Escribir "La suma de los tres numeros es: ", suma;
	Escribir "El promedio de los tres numeros es: ", promedio;
	Escribir num1_r;
	Escribir num2_r;
	Escribir num3_r;
FinProceso
